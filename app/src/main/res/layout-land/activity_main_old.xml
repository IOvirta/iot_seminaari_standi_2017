<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.iovirta.iot_kamera_sovellus.MainActivity"
    android:background="@color/Make_it_blackey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/captionlayout"
            android:layout_alignParentTop="true">

            <TextView
                android:text="@string/mainactivity_headerfirstline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                tools:text="@string/mainactivity_headerfirstline"
                android:typeface="normal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="24sp"
                tools:textColor="?android:attr/textColorSearchUrl"
                android:textColor="@android:color/holo_blue_light"
                android:textAlignment="center" />

            <TextView
                android:text="@string/mainactivity_headersecondline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="@android:color/holo_blue_dark"
                android:textAlignment="center"
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:text="@string/SurveillanceOpenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/launcSurveillanceModeBut"
            android:onClick="openMediaView"
            android:gravity="center"
            android:layout_centerInParent="false"
            android:layout_above="@+id/makerslayout"
            android:layout_below="@+id/captionlayout"

            android:textColor="#FFFFFF"
            android:textSize="10pt"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/makerslayout"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            android:layout_alignParentBottom="true">

            <TextView
                android:text="@string/mainactivity_makerfront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                android:paddingLeft="@dimen/mainactivity_makers" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                tools:text="@string/mainactivity_front"
                android:paddingLeft="@dimen/mainactivity_frontandback_captions"
                android:text="@string/mainactivity_front" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mainactivity_makers" />

            <TextView
                android:text="@string/mainactivity_makerback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                android:paddingLeft="@dimen/mainactivity_makers" />

            <TextView
                android:text="@string/mainactivity_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                tools:text="@string/mainactivity_back"
                android:paddingLeft="@dimen/mainactivity_frontandback_captions" />
        </LinearLayout>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
