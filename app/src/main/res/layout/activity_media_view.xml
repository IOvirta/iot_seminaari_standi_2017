<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_media_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iovirta.iot_kamera_sovellus.mediaView"
    android:background="@color/Make_it_blackey">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:text="@string/mediview_header"
        android:textColor="@android:color/holo_blue_light"
        android:paddingTop="3pt"
        android:paddingBottom="3pt"
        android:textAlignment="center"
        android:text="@string/mediview_header"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="false"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="12pt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2">

        <VideoView
            android:id="@+id/myVideoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>
